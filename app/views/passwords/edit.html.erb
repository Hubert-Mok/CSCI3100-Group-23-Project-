<% content_for :title, "Change Password – CUHK Marketplace" %>

<div class="form-page">
  <div class="form-page-header">
    <h1>Change Password</h1>
    <p>Enter your current password and choose a new one.</p>
  </div>

  <%= form_with url: password_path, method: :patch, class: "auth-form" do |f| %>
    <div class="form-group">
      <label for="current_password">Current Password</label>
      <%= password_field_tag :current_password, nil, id: "current_password", placeholder: "Your current password", autocomplete: "current-password", required: true %>
    </div>

    <div class="form-group">
      <label for="password">New Password</label>
      <%= password_field_tag :password, nil, id: "password", placeholder: "Min. 6 characters", autocomplete: "new-password", required: true %>
    </div>

    <div class="form-group">
      <label for="password_confirmation">Confirm New Password</label>
      <%= password_field_tag :password_confirmation, nil, id: "password_confirmation", placeholder: "Re-enter new password", autocomplete: "new-password", required: true %>
    </div>

    <div class="security-notice">
      <strong>Security tip:</strong> Use a unique password you don't use elsewhere.
    </div>

    <%= submit_tag "Update Password", class: "btn-primary" %>
  <% end %>

  <p class="auth-footer"><%= link_to "← Back to Profile", profile_path %></p>
</div>
