<div class="auth-container">
  <div class="auth-card">
    <h1 class="auth-title">Create Account</h1>
    <p class="auth-subtitle">Join the CUHK Marketplace</p>

    <% if @user.errors.any? %>
      <div class="error-messages">
        <p><strong><%= pluralize(@user.errors.count, "error") %> prevented this account from being created:</strong></p>
        <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with model: @user, url: sign_up_path, class: "auth-form" do |f| %>
      <div class="form-group">
        <%= f.label :email, "Email" %>
        <%= f.email_field :email, placeholder: "your@example.com", autocomplete: "email", required: true %>
      </div>

      <div class="form-group">
        <%= f.label :cuhk_id, "CUHK Student ID" %>
        <%= f.text_field :cuhk_id, placeholder: "e.g. 1155123456", autocomplete: "off", required: true %>
      </div>

      <div class="form-group">
        <%= f.label :username, "Username" %>
        <%= f.text_field :username, placeholder: "Display name", autocomplete: "username", required: true %>
      </div>

      <div class="form-group">
        <%= f.label :college_affiliation, "College" %>
        <%= f.select :college_affiliation,
              options_for_select(User::COLLEGES, @user.college_affiliation),
              { include_blank: "Select your college" },
              { required: true } %>
      </div>

      <div class="form-group">
        <%= f.label :password, "Password" %>
        <%= f.password_field :password, placeholder: "Min. 6 characters", autocomplete: "new-password", required: true %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "Confirm Password" %>
        <%= f.password_field :password_confirmation, placeholder: "Re-enter password", autocomplete: "new-password", required: true %>
      </div>

      <%= f.submit "Create Account", class: "btn-primary" %>
    <% end %>

    <p class="auth-footer">
      Already have an account? <%= link_to "Sign In", sign_in_path %>
    </p>
  </div>
</div>
